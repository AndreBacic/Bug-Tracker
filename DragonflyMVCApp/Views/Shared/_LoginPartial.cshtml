@using DragonflyDataLibrary.Models;
@using DragonflyMVCApp.Controllers;

<ul class="navbar-nav">
    @if (User != null && User.Identity.IsAuthenticated)
    {
        <li class="">
            <a class="" asp-controller="Account" asp-action="EditAccount" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="">
            <form class="" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="">
            <a class="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="">
            <a class="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
