@using DragonflyMVCApp.Controllers;
@{
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();

    Layout = (controllerName) switch
    {
        "Account" => "_AccountLayout",
        "Project" => "_ProjectLayout",
        _ => "_HomeLayout" // HomeController or shared views.
    };
}
@*
    _AccountLayout = (3D bg) => Landing page, register, login
    _HomeLayout = (menu + 3D bg) => AllProjects, Deadlines, EditAccount,etc
    _ProjectLayout = (menu + 1 color 2d bg) => Backlog, board, create task, delete task, etc
*@