@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="w-full min-h-[100vh] grid place-items-center">
    <div class="rounded-lg bg-neutral-700 p-2">
        <h1 class="text-center font-sans font-bold text-xl p-1">Login</h1>
        <form asp-action="Login" asp-controller="Account" method="post" class="flex flex-col gap-1 items-center justify-evenly">
            <input type="email" asp-for="EmailAddress" placeholder="Email Address" class="input-text" contenteditable="true" />
            <input type="password" asp-for="Password" placeholder="Password" class="input-text" contenteditable="true" />
            <input type="submit" value="Log in" class="w-3/5 h-8 text-center cursor-pointer rounded-sm bg-lime-500 text-black" />
        </form>
        <div class="text-left w-full mt-2">
            <p class="w-1/2 inline-block">No account?
            </p><a asp-controller="Account" asp-action="Register"
            class="w-1/2 h-8 text-center grid place-items-center
                    cursor-pointer rounded-sm bg-lime-500 text-black">Sign Up</a>
        </div>
    </div>
</div>
