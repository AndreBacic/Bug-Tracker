@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="w-60 text-center font-sans font-bold text-coolGray-600 p-1">Login</h1>
<form asp-action="Login" asp-controller="Account" method="post" class="flex flex-col gap-1 items-center justify-evenly">
    <input type="email" asp-for="EmailAddress" placeholder="Email Address" class="w-3/5 p-2 border-2 rounded-sm selection:border-4 border-lime-800" contenteditable="true" />
    <input type="password" asp-for="Password" placeholder="Password" class="w-3/5 p-2 border-2 rounded-sm selection:border-4 border-lime-800" contenteditable="true" />
    <input type="submit" value="Log in" class="w-3/5 h-8 rounded-sm bg-lime-800 text-coolGray-200" />
</form>
<div class="text-coolGrey-600 text-left w-full pt-1">No account?
    <span class="w-16 h-8 rounded-sm bg-lime-800">
        <a asp-area="" asp-controller="Account" asp-action="Register" class="text-coolGray-200">Sign Up</a>
   </span>
</div>
