<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bug Tracker</title>
    <link rel="stylesheet" href="~/css/post_tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="grid grid-cols-5 grid-rows-5 gap-4">
    <header class=""><h1>Bug Tracker</h1><h2>Project Management</h2></header>
    <div role="directory">
        <button class="" id="userMenuButton" onclick="userMenuButtonOnClick()">
            Welcome, @User.ClaimValue(UserClaimsIndex.Name)
            <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        <nav class="" id="userMenu" style="display:none">
            <a asp-action="Home" asp-controller="Account">Upcoming Deadlines</a>
            <a asp-action="Home" asp-controller="Account">My Projects</a>
            <a asp-action="Home" asp-controller="Account">My Organizations</a>
            <a asp-action="EditAccount" asp-controller="Account">Edit Account</a>
            <a asp-action="Logout" asp-controller="Account">Logout</a>
        </nav>
        <button class="" id="orgMenuButton" onclick="orgMenuButtonOnClick()">
            Organization @{ //TODO:Add org name to user claims
            }
            <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        <nav class="" id="orgMenu" style="display:none">
            <a asp-action="OrganizationHome" asp-controller="Organization">Organization Home</a>
            <a asp-action="" asp-controller="Organization">About</a>
            <a asp-action="" asp-controller="Organization">Our Team</a>
            <a asp-action="" asp-controller="Organization">Statistics</a>
        </nav>
    </div>

    <div>
        <button class="" id="adminMenuButton" style="display:none" onclick="adminMenuButtonOnClick()">
            @if (User.ClaimValue(UserClaimsIndex.Role) == UserPosition.ADMIN.ToString())
            {
                <script>document.getElementById("adminMenuButton").style.display = ""</script>
            }
            Admin Menu
            <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        <nav class="" id="adminMenu" style="display:none">
            <a asp-action="ManageOrganization" asp-controller="Organization">Manage Organization</a>
            <a asp-action="" asp-controller="Organization">Manage Workers</a>
            <a asp-action="" asp-controller="Organization">Invite Workers</a>
            <a asp-action="CreateProject" asp-controller="Organization">New Project</a>
        </nav>
    </div>
    <main role="main" class="">
        @RenderBody()
    </main>

    <footer class="">
        <div>
            &copy; 2021 Bug Tracker by Andre Bacic
        </div>
    </footer>
    <script>
        let userMenuIsOpen = false
        let orgMenuIsOpen = false
        let adminMenuIsOpen = false
        const userMenu = document.getElementById("userMenu")
        const orgMenu = document.getElementById("orgMenu")
        const adminMenu = document.getElementById("adminMenu")

        function userMenuButtonOnClick() {
            userMenuIsOpen = !userMenuIsOpen
            if (userMenuIsOpen) {
                orgMenuIsOpen = adminMenuIsOpen = false
                orgMenu.style.display = adminMenu.style.display = "none"
                userMenu.style.display = ""
            } else {
                userMenu.style.display = "none"
            }
        }
        function orgMenuButtonOnClick() {
            orgMenuIsOpen = !orgMenuIsOpen
            if (orgMenuIsOpen) {
                userMenuIsOpen = adminMenuIsOpen = false
                userMenu.style.display = adminMenu.style.display = "none"
                orgMenu.style.display = ""
            } else {
                orgMenu.style.display = "none"
            }
        }
        function adminMenuButtonOnClick() {
            adminMenuIsOpen = !adminMenuIsOpen
            if (adminMenuIsOpen) {
                orgMenuIsOpen = userMenuIsOpen = false
                orgMenu.style.display = userMenu.style.display = "none"
                adminMenu.style.display = ""
            } else {
                adminMenu.style.display = "none"
            }
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
