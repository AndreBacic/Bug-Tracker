@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" asp-controller="Account" method="post">
    <input type="email" asp-for="EmailAddress" placeholder="Email Address" class="" contenteditable="true" />
    <input type="password" asp-for="Password" placeholder="Password" class="" contenteditable="true" />
    <input type="submit" value="Log in" class="" />
</form>
<div>No account? <a asp-area="" asp-controller="Account" asp-action="Register" class="">Sign Up</a></div>

