@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" asp-controller="Account" method="post">
    <input type="email" asp-for="EmailAddress" placeholder="Email Address" class="account-text-input" contenteditable="true" />
    <input type="password" asp-for="Password" placeholder="Password" class="account-text-input" contenteditable="true" />
    <input type="submit" value="Log in" class="account-button" />
</form>
<div>No account? <a asp-area="" asp-controller="Account" asp-action="Register" class="account-button">Sign Up</a></div>

