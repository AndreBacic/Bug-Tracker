<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bug Tracker</title>
    <link rel="stylesheet" href="~/css/post_tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="">
        <partial name="_LoginPartial" />
                    
    </header>
    <div class="">
        <main role="main" class="p-20 rounded-2xl bg-gradient-to-br from-lime-500 to-lime-600">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="">
            &copy; 2021 - Bug Tracker
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
