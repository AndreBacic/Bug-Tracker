@using Bug_Tracker_Library.Models;
@using Bug_Tracker_Front_End__MVC_plus_Razor.Controllers;

<ul class="navbar-nav">
    @if (User != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/EditAccount" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-route-returnUrl="@Url.Action(nameof(AccountController.Login), "Account", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
