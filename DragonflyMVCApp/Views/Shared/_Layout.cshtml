<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dragonfly Project Management</title>
    <link rel="stylesheet" href="~/css/post_tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="">
    <header class="fixed w-full h-32 z-40 top-0 left-0">
        <section class="relative w-1/2 h-full z-40 top-0 left-0 p-2 bg-lime-500 text-center text-black text-xl shadow rounded-br-2xl">
            <h1 class="mb-10">Dragonfly</h1>
            <h2 class="text-lg">Project Management</h2>
        </section>
        <div class="absolute w-1/2 min-h-[6rem] z-30 top-0 right-0" role="directory">
            <button class="flex justify-center items-center w-full min-h-[6rem] border-b border-b-trueGray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-trueGray-700
                           hover:bg-trueGray-200 focus:outline-none" 
                    id="userMenuButton" onclick="userMenuButtonOnClick()">
                Welcome, @User.ClaimValue(UserClaimsIndex.Name)
                <svg id="userMenuArrow" class="-mr-1 ml-2 h-5 w-5 -rotate-90" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </button>
            <nav class="relative z-30 left-[-25%] pt-10 pb-2 w-[125%] rounded-bl-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none
                        transition-all duration-150 ease-linear origin-top-right" id="userMenu" style="display:none">
                <a class="text-trueGray-700 block px-4 py-2 text-sm" asp-action="Home" asp-controller="Account">Notifications</a>
                <a class="text-trueGray-700 block px-4 py-2 text-sm" asp-action="MyProjects" asp-controller="Account">My Projects</a>
                <a class="text-trueGray-700 block px-4 py-2 text-sm" asp-action="Home" asp-controller="Account">My Organizations</a>
                <a class="text-trueGray-700 block px-4 py-2 text-sm" asp-action="EditAccount" asp-controller="Account">Edit Account</a>
                <a class="text-trueGray-700 block px-4 py-2 text-sm" asp-action="Logout" asp-controller="Account">Logout</a>
            </nav>
            <button class="flex justify-center items-center w-full min-h-[6rem] border border-b-trueGray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-trueGray-700
                           hover:bg-trueGray-200 focus:outline-none" 
                    id="orgMenuButton" onclick="orgMenuButtonOnClick()">
                Organization @{ //TODO:Add org name to user claims
                }
                <svg id="orgMenuArrow" class="-mr-1 ml-2 h-5 w-5 -rotate-90" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </button>
            <nav class="relative z-30 left-[-25%] pt-10 pb-2 w-[125%] rounded-bl-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none
                        transition-all duration-150 ease-linear origin-top-right" id="orgMenu" style="display:none">
                <a class="text-gray-700 block px-4 py-2 text-sm" asp-action="OrganizationHome" asp-controller="Organization">Organization Home</a>
                <a class="text-gray-700 block px-4 py-2 text-sm" asp-action="" asp-controller="Organization">About</a>
                <a class="text-gray-700 block px-4 py-2 text-sm" asp-action="" asp-controller="Organization">Our Team</a>
                <a class="text-gray-700 block px-4 py-2 text-sm" asp-action="" asp-controller="Organization">Statistics</a>
            </nav>
        </div>
    </header>
    <div id="translucentCover" class="fixed z-20 w-full h-full bg-opacity-60 backdrop-filter backdrop-blur-lg bg-white" style="display:none;" onclick="translucentCoverOnClick(this)"></div>

    <div class="fixed z-30 left-0 top-32 w-full min-h-[4rem]" id="adminMenuDiv" style="display:none">
        @if (User.ClaimValue(UserClaimsIndex.Role) == UserPosition.ADMIN.ToString())
        {
            <script>document.getElementById("adminMenuDiv").style.display = ""</script>
        }
        <button class="inline-flex justify-center w-2/5 rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 
                       hover:bg-lime-200 focus:outline-none focus:bg-lime-300" 
                id="adminMenuButton" onclick="adminMenuButtonOnClick()">
            Admin Menu
            <svg id="adminMenuArrow" class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
        <nav class="absolute left-0 mt-2 py-1 w-3/4 rounded-r-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 overflow-y-scroll
                    focus:outline-none" id="adminMenu" style="display:none">
            <a class="text-gray-700 block px-4 py-8 border-b-2 border-cyan-500 text-sm" asp-action="ManageOrganization" asp-controller="Organization">Manage Organization</a>
            <a class="text-gray-700 block px-4 py-8 border-b-2 border-cyan-500 text-sm" asp-action="" asp-controller="Organization">Manage Workers</a>
            <a class="text-gray-700 block px-4 py-8 border-b-2 border-cyan-500 text-sm" asp-action="" asp-controller="Organization">Invite Workers</a>
            <a class="text-gray-700 block px-4 py-8 text-sm" asp-action="CreateProject" asp-controller="Organization">New Project</a>
        </nav>
    </div>

    <main role="main" class="">
        @RenderBody()
    </main>

    <footer class="">
        <div>
            &copy; 2021 Dragonfly by Andre Bacic
        </div>
    </footer>
    <script>
        let userMenuIsOpen = false
        let orgMenuIsOpen = false
        let adminMenuIsOpen = false
        const userMenu = document.getElementById("userMenu")
        const orgMenu = document.getElementById("orgMenu")
        const adminMenu = document.getElementById("adminMenu")

        const userMenuArrow = document.getElementById("userMenuArrow")
        const orgMenuArrow = document.getElementById("orgMenuArrow")
        const adminMenuArrow = document.getElementById("adminMenuArrow")

        const translucentCover = document.getElementById("translucentCover")
        const menus = [userMenu, orgMenu, adminMenu]
        const arrows = [userMenuArrow, orgMenuArrow, adminMenuArrow]

        function userMenuButtonOnClick() {
            userMenuIsOpen = !userMenuIsOpen
            userMenuArrow.addEventListener("click", func, false)
            if (userMenuIsOpen) {
                orgMenuIsOpen = adminMenuIsOpen = false
                orgMenu.style.display = adminMenu.style.display = "none"
                orgMenuArrow.style.display = adminMenuArrow.style.display = "rotateZ(-90deg)"

                userMenu.style.display = ""
                userMenuArrow.style.transform = "rotateZ(0deg)"
                translucentCover.style.display = ""
            } else {
                userMenu.style.display = "none"
                userMenuArrow.style.transform = "rotateZ(-90deg)"
                translucentCover.style.display = "none"
            }
        }
        function orgMenuButtonOnClick() {
            orgMenuIsOpen = !orgMenuIsOpen
            if (orgMenuIsOpen) {
                userMenuIsOpen = adminMenuIsOpen = false
                userMenu.style.display = adminMenu.style.display = "none"
                userMenuArrow.style.display = adminMenuArrow.style.display = "rotateZ(-90deg)"

                orgMenu.style.display = ""
                orgMenuArrow.style.transform = "rotateZ(0deg)"
                translucentCover.style.display = ""
            } else {
                orgMenu.style.display = "none"
                orgMenuArrow.style.transform = "rotateZ(-90deg)"
                translucentCover.style.display = "none"
            }
        }
        function adminMenuButtonOnClick() {
            adminMenuIsOpen = !adminMenuIsOpen
            if (adminMenuIsOpen) {
                orgMenuIsOpen = userMenuIsOpen = false
                orgMenu.style.display = userMenu.style.display = "none"
                orgMenuArrow.style.display = userMenuArrow.style.display = "rotateZ(-90deg)"

                adminMenu.style.display = ""
                adminMenuArrow.style.transform = "rotateZ(0deg)"
                translucentCover.style.display = ""
            } else {
                adminMenu.style.display = "none"
                adminMenuArrow.style.transform = "rotateZ(-90deg)"
                translucentCover.style.display = "none"
            }
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
