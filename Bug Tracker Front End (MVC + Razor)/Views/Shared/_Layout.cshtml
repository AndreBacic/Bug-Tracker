<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bug Tracker</title>
    <link rel="stylesheet" href="~/css/post_tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="fixed top-0 w-full h-8 bg-lime-400">
        <div class="w-1/3 h-4 text-left text-coolGray-600">
            Bug Tracker Project Management
        </div>        
    </header>
    <div class="grid justify-center items-center bg-gradient-to-b from-lime-700 to-green-900">
        <main role="main" class="p-20 rounded-2xl bg-gradient-to-br from-lime-500 to-lime-600">
            @RenderBody()
        </main>
    </div>

    <footer class="fixed bottom-0 w-full h-8 bg-lime-400
                   flex justify-center items-center">
        <div class="w-1/3 h-4 text-left text-coolGray-600">
            &copy; 2021 Bug Tracker by Andre Bacic
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
