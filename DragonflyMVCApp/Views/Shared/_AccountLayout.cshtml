<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dragonfly Project Management</title>
    <link rel="stylesheet" href="~/css/post_tailwind.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="h-full w-full">
    <header class="fixed top-0 z-10 min-h-[2.5rem] w-full bg-neutral-700 grid place-items-center">
        <div class="h-6 w-full px-1 text-left text-lime-400 sm:px-4 sm:w-[32rem] md:w-[48rem]">
            Dragonfly Project Management
        </div>
    </header>

    <canvas id="canvas" class="fixed z-0 h-full w-full bg-black"></canvas>
    <main role="main" class="relative z-10 min-h-[calc(100vh-2.5rem)] w-full bg-transparent pt-10 text-white">
        @RenderBody()
    </main>

    <partial name="_footer" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*@RenderSection("Scripts", required: false)*@
</body>

</html>
