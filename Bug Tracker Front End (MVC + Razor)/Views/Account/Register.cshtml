@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
@{string message = ViewData["RegisterMessage"].ToString();}
@if (String.IsNullOrWhiteSpace(message) == false)
{
    <h3 class="text-center">@ViewData["RegisterMessage"]</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="">
                <label asp-for="FirstName" class=""></label>
                <input asp-for="FirstName" class="" contenteditable="true" />
                <span asp-validation-for="FirstName" class="p-1 rounded-sm bg-red-400 text-red-700"></span>
            </div>
            <div class="">
                <label asp-for="LastName" class=""></label>
                <input asp-for="LastName" class="" contenteditable="true" />
                <span asp-validation-for="LastName" class="p-1 rounded-sm bg-red-400 text-red-700"></span>
            </div>
            <div class="">
                <label asp-for="EmailAddress" class=""></label>
                <input asp-for="EmailAddress" type="email" class="" contenteditable="true" />
                <span asp-validation-for="EmailAddress" class="p-1 rounded-sm bg-red-400 text-red-700"></span>
            </div>
            <div class="">
                <label asp-for="Password" class=""></label>
                <input asp-for="Password" type="password" class="" contenteditable="true" />
                <span asp-validation-for="Password" class="p-1 rounded-sm bg-red-400 text-red-700"></span>
            </div>
            <div class="">
                <input type="submit" value="Create" class="" />
            </div>
        </form>
    </div>
</div>
<div>Already registered? <a asp-area="" asp-controller="Account" asp-action="Login" class="">Log in</a></div>

