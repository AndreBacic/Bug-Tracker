@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center font-sans font-bold text-xl text-coolGray-600 p-1">Register</h1>
@{string message = ViewData["RegisterMessage"].ToString();}
@if (String.IsNullOrWhiteSpace(message) == false)
{
    <h3 class="text-center font-bold text-lg text-red-700 p-1.5 bg-red-400">@ViewData["RegisterMessage"]</h3>
}
<hr class="border-black border-2"/>
<form asp-action="Register" asp-controller="Account" method="post" class="flex flex-col gap-1 items-center justify-evenly">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="w-full">
        <label asp-for="FirstName" class="input-label"></label>
        <input asp-for="FirstName" class="input-text" contenteditable="true" />
        <span asp-validation-for="FirstName" class="validation-for"></span>
    </div>
    <div class="w-full">
        <label asp-for="LastName" class="input-label"></label>
        <input asp-for="LastName" class="input-text" contenteditable="true" />
        <span asp-validation-for="LastName" class="validation-for"></span>
    </div>
    <div class="w-full">
        <label asp-for="EmailAddress" class="input-label"></label>
        <input asp-for="EmailAddress" type="email" class="input-text" contenteditable="true" />
        <span asp-validation-for="EmailAddress" class="validation-for"></span>
    </div>
    <div class="w-full">
        <label asp-for="Password" class="input-label"></label>
        <input asp-for="Password" type="password" class="input-text" contenteditable="true" />
        <span asp-validation-for="Password" class="validation-for"></span>
    </div>
    <input type="submit" value="Create" class="w-1/2 h-8 my-auto text-center cursor-pointer rounded-sm bg-lime-800 text-coolGray-200" />
</form>
<div>
    <p class="w-1/2 m-0 inline-block">Already registered?</p>
    <a asp-area="" asp-controller="Account" asp-action="Login" class="w-1/2">
        <div class="w-full m-0 inline-block h-8 text-center cursor-pointer rounded-sm bg-lime-800 text-coolGray-200">Log in</div>
    </a>
</div>

